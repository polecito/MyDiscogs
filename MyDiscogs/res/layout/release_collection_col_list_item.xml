<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/release_collection_col_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="top"
    android:background="@drawable/collection_box" >
    
    <RelativeLayout android:id="@+id/release_collection_col_list_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        
        <TextView android:id="@+id/release_collection_col_list_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="In Collection"/>
        
        <TextView android:id="@+id/release_collection_col_list_item_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/discogs_blue"
            android:text="Remove"/>
        
	</RelativeLayout>
	
    <View android:id="@+id/release_collection_col_list_item_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/release_collection_col_list_item_title"
        android:background="@color/discogs_dark_green"/>
    
    <ListView android:id="@+id/release_collection_col_list_item_fields"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:listSelector="@android:color/transparent"
        android:layout_below="@+id/release_collection_col_list_item_line">
        
    </ListView>
    
    
</RelativeLayout>